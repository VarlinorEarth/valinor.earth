{% set pageHeaderNavLinkClasses = "no-underline text-gray-700 px-2 py-1 rounded hover:bg-gray-200 focus:bg-gray-200 active:bg-gray-200" %}
<header>
  <div class="frame mb-8">
    <nav class="pt-8 pb-4 border-b-4 flex items-center flex-col md:flex-row">
      <a class="md:mr-auto md:-ml-2 p-2 inline-block flex items-center {{pageHeaderNavLinkClasses}} font-bold" href="{% getPermalink collections.all, "home", locale %}">
        <img class="w-8 flex-shrink-0" src="{{"/img/sagri-logo.svg" | url}}" alt="Logo of SAgri">
        <span class="ml-2 text-xl">{{site.title[locale]}}</span>
      </a>

      <ul class="flex flex-wrap justify-center w-full md:w-auto pt-4 md:pt-0 mt-4 md:mt-0 md:-mr-2 border-t md:border-t-0">
        {% for id in site.primaryNav %}
        {% for item in collections.all %}
        {% if item.data.locale === locale and item.data.contentId === id %}
        <li>
          <a class="{{pageHeaderNavLinkClasses}} font-bold" href="{{ item.url }}">{{item.data.title}}</a>
        </li>
        {% endif %}
        {% endfor%}
        {% endfor%}
      </ul>

      {% set numOfLocales = collections.all | numberOfLocalesForContentId(contentId) %}

      {% if numOfLocales > 1 %}
      <ul class="flex flex-wrap justify-center w-full md:w-auto pt-4 md:pt-0 mt-4 md:mt-0 md:ml-8 md:-mr-2 border-t md:border-t-0">
        {% for locale in site.locales %} {% for item in collections.all %} {% if
        item.data.locale === locale.code and item.data.contentId and item.data.contentId === contentId %}
        <li>
          <a class="{{pageHeaderNavLinkClasses}} text-sm"
             href="{{ item.url }}"
             hreflang="{{ locale.code}}"
             lang="{{ locale.code}}">{{locale.label}}</a>
        </li>
        {% endif %} {% endfor%} {% endfor%}
      </ul>
      {% endif %}
    </nav>
  </div>
</header>
