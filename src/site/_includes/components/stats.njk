<div class="[ max-w-2xl mx-auto mt-8 md:mt-12 p-4 bg-fire-200 border border-fire-300 rounded ][ flex flex-wrap -m-4 justify-around ]">
  <div class="stat m-4 text-shadow-light">
    <h3 class="stat__title">Assets Under Management</h3>
    <p><span
        class="stat__value"
        data-controller="animated-number"
        data-animated-number-lazy-value=""
        data-animated-number-start-value="10"
        data-animated-number-end-value="3000"
        data-animated-number-duration-value="2000"
      >3000</span> <span class="stat__unit">Hectares</span></p>
  </div>

  <div class="stat m-4">
    <h3 class="stat__title">Customers</h3>
    <p><span
        class="stat__value"
        data-controller="animated-number"
        data-animated-number-lazy-value=""
        data-animated-number-start-value="1"
        data-animated-number-end-value="10"
        data-animated-number-duration-value="1000"
      >10</span> <span class="stat__unit">Farming Companies</span></p>
  </div>
</div>
