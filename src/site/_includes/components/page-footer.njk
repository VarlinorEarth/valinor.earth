{% import "macros/nav.njk" as navMacros %}
{% set linkClasses = "mr-4 font-bold text-gray-100 hover:text-gray-100 focus:text-gray-100 no-underline underline hover:underline focus:underline" %}
<footer class="page-footer">
  <div class="page-footer__wrapper frame">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 grid-flow-row-dense">

      {{navMacros.nav(site.secondaryNav, collections, locale, listClasses="flex flex-wrap lg:col-start-1 lg:col-end-7 -mt-2", listItemClasses="mt-2", linkClasses=linkClasses)}}

      {% set numOfLocales = collections.all | numberOfLocalesForContentId('home') %}

      {% if numOfLocales > 1 %}
      <ul class="flex lg:col-start-1 lg:col-end-7">
        {% for locale in site.locales %} {% for item in collections.all %} {% if
        item.data.locale === locale.code and item.data.contentId and item.data.contentId === 'home' %}
        <li>
          <a class="mr-4 text-gray-100 hover:text-gray-100 no-underline hover:underline"
             href="{{ item.url }}"
             hreflang="{{ locale.code }}"
             lang="{{ locale.code}} ">{{locale.label}}</a>
        </li>
        {% endif %} {% endfor%} {% endfor%}
      </ul>
      {% endif %}

    <div class="lg:col-span-12 text-gray-500">&copy; {{buildTime | date('YYYY')}} {{site.title[locale]}}</div>
    </div>
  </div>
</footer>
