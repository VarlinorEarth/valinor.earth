{% import "macros/nav.njk" as navMacros %} {% set linkClasses = "mr-4 font-bold
text-gray-100 hover:text-gray-100 focus:text-gray-100 active:text-gray-100
hover:no-underline focus:no-underline active:no-underline" %}
<footer class="page-footer">
  <div class="page-footer__wrapper frame">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-4 grid-flow-row-dense">
      <div class="lg:col-start-7 lg:col-end-12">
        <h2 class="font-bold text-gray-500 mb-2">Locations</h2>
        <div class="md:flex md:-mx-2">
          <div class="vcard mt-4 md:mt-0 md:px-2 md:w-1/2">
            <span class="adr">
              <span class="sr-only fn org">{{site.title[locale]}}</span>
              <span class="street-address"
                >#180, 14th Cross, 8th Main, 6th Sector, HSR Layout</span
              >,
              <span class="locality">Bangalore</span>
              <span class="postal-code">560102</span>
            </span>
          </div>
        </div>
      </div>

      {{navMacros.nav(site.secondaryNav, collections, locale, listClasses="flex
      flex-wrap lg:col-start-1 lg:col-end-7 -mt-2", listItemClasses="mt-2",
      linkClasses=linkClasses)}} {% set numOfLocales = collections.all |
      numberOfLocalesForContentId('home') %} {% if numOfLocales > 1 %}
      <ul class="flex lg:col-start-1 lg:col-end-7">
        {% for locale in site.locales %} {% for item in collections.all %} {% if
        item.data.locale === locale.code and item.data.contentId and
        item.data.contentId === 'home' %}
        <li>
          <a
            class="mr-4 text-gray-100 hover:text-gray-100 no-underline hover:underline"
            href="{{ item.url }}"
            hreflang="{{ locale.code }}"
            lang="{{ locale.code}} "
            >{{locale.label}}</a
          >
        </li>
        {% endif %} {% endfor%} {% endfor%}
      </ul>
      {% endif %}

      <ul class="flex -m-1 lg:col-span-12">
        {% for item in site.socialNetworks | objectToArray %}
        <li class="m-1">
          <a class="text-gray-500 hover:text-gray-200 active:text-gray-200 hover:no-underline focus:no-underline" href="{{item[1]}}" rel="noopener">{{item[0]}}</a>
        </li>
        {% endfor %}
      </ul>
      <div class="lg:col-span-12 text-gray-500">
        <p><small>&copy; {{buildTime | date('YYYY')}} {{site.title[locale]}}</small></p>
      </div>
    </div>
  </div>
</footer>
