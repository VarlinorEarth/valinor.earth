<ul class="logo-list logo-list--narrow">
  {% for p in customers %}
  <li>
    <a class="tpp-logo" title="{{p.name}}" href="{{p.url}}" target="_blank">
      <span
        class="w-full h-full aspect-ratio aspect-ratio-contain aspect-ratio-4/3"
      >
        <img
          src="{{p.logoPath | url}}"
          alt="Logo of {{p.name}}"
          sizes="(max-width: 38.75em) 50vw, 25vw"
        />
      </span>
    </a>
  </li>
  {% endfor %}
</ul>
