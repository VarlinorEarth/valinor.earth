<!DOCTYPE html>
<html lang="{{locale}}">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/img/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;600&display=swap" rel="stylesheet" />
  {% bundledCss %}
  <title>{{ title }}</title>
</head>

<body>
<div class="page">
  <nav>
    <a class="inline-block" href="{% getPermalink collections.all, " home", locale %}">
      <img class="w-12" src="/img/sagri-logo.svg" alt="Logo of SAgri">
    </a>
    <div>
      {% for locale in site.locales %} {% for item in collections.all %} {% if
      item.data.locale === locale.code and item.data.contentId and item.data.contentId === contentId %}
      <a href="{{ item.url }}">{{locale.label}}</a>
      {% endif %} {% endfor%} {% endfor%}
    </div>
    <div>
      {% for id in site.primaryNav %}
      {% for item in collections.all %}
      {% if item.data.locale === locale and item.data.contentId === id %}
      <a href="{{ item.url }}">{{item.data.title}}</a>
      {% endif %}
      {% endfor%}
      {% endfor%}
    </div>
  </nav>

  <main id="main" tabindex="-1" class="frame">
    {% block content %}{% endblock %}
  </main>
</div>

<footer class="page-footer">
  <div class="page-footer__wrapper frame">
    <p>&copy; {{buildTime | date('YYYY')}} {{site.title[locale]}}</p>
  </div>
</footer>

{% bundledJs %}
</body>
</html>
