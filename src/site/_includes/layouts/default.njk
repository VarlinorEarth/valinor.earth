<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/favicon.ico" />

    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;600&display=swap"
      rel="stylesheet"
    />
    {% bundledCss %}
    <title>{{ title }}</title>
  </head>
  <body>
    <nav>
      {% for locale in site.locales %} {% for item in collections.all %} {% if
      item.data.locale === locale.code and item.data.contentId === contentId %}
      <a href="{{ item.url }}">{{locale.label}}</a>
      {% endif %} {% endfor%} {% endfor%}
    </nav>

    <nav>
      {% for id in site.primaryNav %}
        {% for item in collections.all %}
          {% if item.data.locale === locale and item.data.contentId === id %}
            <a href="{{ item.url }}">{{item.data.title}}</a>
          {% endif %}
        {% endfor%}
      {% endfor%}
    </nav>

    <a href="{% getPermalink collections.all, "home", locale %}">Sagri</a>

    <div class="content content-lead">
      {{ content | safe }}
    </div>
    {% bundledJs %}
  </body>
</html>
