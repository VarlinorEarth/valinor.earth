{% extends "layouts/base.njk" %} {% block content %}
<h1 class="page__title">{{title}}</h1>
<article class="section">
  <div class="max-w-xl mx-auto">
    <ul class="space-y-4">
      {% for post in pagination.items %} {% if post.data.locale ===
      locale %}
      <li class="post-blurb">
        <h2>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <p class="[ post-blurb__meta ]">
          {{ post.date | date('ll', locale) }}
        </p>
      </li>
      {% endif %} {% endfor %}
    </ul>

    <nav aria-label="pagination">
      {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}"
        >Previous</a
      >{% endif %} {% if pagination.href.next %}<a
        href="{{ pagination.href.next }}"
        >Next</a
      >{% endif %}
    </nav>
  </div>
</article>
{% endblock %}
