{% extends "layouts/base.njk" %}
{% import "macros/lists.njk" as lists %}
{% block content %}
<h1 class="page__title">{{title}}</h1>
<article class="section">
  <div class="max-w-xl mx-auto">
    {{ lists.blogPosts(pagination.items, ulClass="space-y-4", liClasses="post-blurb", dtClasses="post-blurb__meta") }}

    <nav aria-label="pagination">
      {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}"
        >Previous</a
      >{% endif %} {% if pagination.href.next %}<a
        href="{{ pagination.href.next }}"
        >Next</a
      >{% endif %}
    </nav>
  </div>
</article>
{% endblock %}
