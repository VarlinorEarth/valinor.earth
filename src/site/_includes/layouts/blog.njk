{% extends "layouts/base.njk" %}

{% block content %}
<h1 class="page__title">{{title}}</h1>
<article class="section">
  <div class="max-w-xl">
      <ul class="space-y-4">
        {% for post in pagination.items | reverse %}
          {% if post.data.locale === locale %}
          <li><a href="{{ post.url }}">{{ post.data.title }}</a><br><span class="text-sm text-gray-700">{{ page.date | date('ll', locale) }}</span></li>
          {% endif %}
        {% endfor %}
      </ul>

      <nav aria-label="pagination">
        {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous</a>{% endif %}
        {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% endif %}
      </nav>
  </div>
</article>
{% endblock %}
