{
  "name": "valinor.earth",
  "version": "1.0.0",
  "description": "Source code for the valinor.earth website",
  "author": "Saneef Ansari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/valinorearth/valinor.earth/"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s --print-name clean build:assets build:site",
    "build:assets": "webpack --mode production",
    "build:site": "eleventy",
    "clean": "rm -rf ./dist",
    "predev": "run-s --print-name clean",
    "dev:assets": "webpack --mode development --watch",
    "dev:site": "eleventy --serve",
    "start": "NODE_ENV=development run-p --print-name dev:*",
    "test": "run-s --print-name build"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "eleventy-plugin-local-respimg": "^0.4.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-xo-space": "^0.25.0",
    "eslint-plugin-prettier": "^3.3.0",
    "htmlnano": "^0.2.8",
    "mini-css-extract-plugin": "^1.3.3",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-nesting": "^7.0.1",
    "stimulus": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-hudochenkov": "^5.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "tailwindcss": "^2.0.2",
    "turbolinks": "^5.2.0",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-manifest-plugin": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.{md,yml,json}": "prettier --write"
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.1",
    "prettier": "^2.2.1"
  }
}
