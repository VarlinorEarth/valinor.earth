{
  "name": "sagri.co",
  "version": "1.0.0",
  "description": "Source code for the sagri.co website",
  "author": "Saneef Ansari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sagri/sagri.co"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s clean build:assets build:site",
    "build:assets": "webpack --mode production",
    "build:site": "eleventy",
    "clean": "rm -rf ./dist",
    "predev": "run-s clean",
    "dev": "NODE_ENV=development run-p dev:*",
    "dev:assets": "webpack --mode development --watch",
    "dev:site": "eleventy --serve",
    "deploy": "discharge deploy",
    "test": "run-s build"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@static/discharge": "^2.0.1",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "htmlnano": "^0.2.5",
    "mini-css-extract-plugin": "^0.9.0",
    "moment": "^2.25.1",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nesting": "^7.0.1",
    "stimulus": "^1.1.1",
    "tailwindcss": "^1.4.4",
    "turbolinks": "^5.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,yml,json}": "prettier --write"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5"
  }
}
